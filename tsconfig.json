{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@config": ["./src/config/index"],
            "@modules/*": ["./src/modules/*"],
            "@common": ["./src/common/index"],
            "@types": ["./src/types/index"],
            "@utils": ["./src/utils/index"],
            "@guards": ["./src/guards/index"],
            "@middlewares": ["./src/middlewares/index"],
            "@validators": ["./src/validators/index"]
        }
    },
    "include": ["src", "apollo-error-converter.d.ts"]
}
